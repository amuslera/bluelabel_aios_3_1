# API Keys (fill in your actual keys)
ANTHROPIC_API_KEY=sk-ant-api03-...
OPENAI_API_KEY=sk-...

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Database & Redis
REDIS_URL=redis://localhost:6379/0

# LLM Configuration
DEFAULT_CLOUD_MODEL=claude-3-sonnet-20240229
DEFAULT_LOCAL_MODEL=llama3:8b
